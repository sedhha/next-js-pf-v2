{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["DOM", "DOM.Iterable", "ES2023"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "preserve",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["components/*"],
			"@/pages/*": ["pages/*"],
			"@/styles/*": ["styles/*"],
			"@/constants/*": ["constants/*"],
			"@/slices/*": ["redux/slices/*"],
			"@/redux/*": ["redux/tools/*"],
			"@/utils/*": ["utils/*"],
			"@/v2/*": ["components/v2/*"],
			"@/v3/*": ["components/v3/*"],
			"@/interfaces/*": ["interfaces/*"],
			"@/hooks/*": ["hooks/*"],
			"@/firebase/*": ["backend/firebase/*"],
			"@/appscript/*": ["backend/appscript/*"],
			"@/fe-client/*": ["utils/fe/apis/services/*"],
			"@/middleware/*": ["middleware/*"],
			"@/backend/*": ["backend/*"]
		},
		"types": ["node", "react", "react-dom"]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"types.d.ts",
		"backend/security/index.js"
	],
	"exclude": ["node_modules"]
}
